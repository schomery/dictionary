{
  "name": "Panel View for Google™ Translate",
  "short_name": "idanywhere",
  "description": "Access to a floating multilingual Google™ Translate panel on any webpage",
  "author": "Jeremy Schomery",
  "version": "0.4.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "data/iframe/index.html",
    "data/icons/activator.png",
    "data/icons/loading.gif",
    "data/panel/inject.css"
  ],
  "background": {
    "scripts": [
      "common.js"
    ]
  },
  "browser_action":{
    "default_icon": {
      "16": "data/icons/16.png",
      "24": "data/icons/24.png",
      "32": "data/icons/32.png",
      "64": "data/icons/64.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://translate.google.com/m/*",
        "*://translate.google.com.hk/m/*",
        "*://translate.google.com.tr/m/*",
        "*://translate.google.com.tw/m/*",
        "*://translate.google.com.ua/m/*",
        "*://translate.google.com.vn/m/*",
        "*://translate.google.co.in/m/*",
        "*://translate.google.co.jp/m/*",
        "*://translate.google.co.kr/m/*",
        "*://translate.google.co.uk/m/*",
        "*://translate.google.cn/m/*",
        "*://translate.google.de/m/*",
        "*://translate.google.fr/m/*",
        "*://translate.google.it/m/*",
        "*://translate.google.pl/m/*",
        "*://translate.google.ru/m/*"
      ],
      "js": ["data/inject/inject.js"],
      "css": ["data/inject/inject.css"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://translate.google.com/m/*",
        "*://translate.google.com.hk/m/*",
        "*://translate.google.com.tr/m/*",
        "*://translate.google.com.tw/m/*",
        "*://translate.google.com.ua/m/*",
        "*://translate.google.com.vn/m/*",
        "*://translate.google.co.in/m/*",
        "*://translate.google.co.jp/m/*",
        "*://translate.google.co.kr/m/*",
        "*://translate.google.co.uk/m/*",
        "*://translate.google.cn/m/*",
        "*://translate.google.de/m/*",
        "*://translate.google.fr/m/*",
        "*://translate.google.it/m/*",
        "*://translate.google.pl/m/*",
        "*://translate.google.ru/m/*"
      ],
      "js": ["data/inject/top.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": [
        "*://translate.google.com/m/*",
        "*://translate.google.com.hk/m/*",
        "*://translate.google.com.tr/m/*",
        "*://translate.google.com.tw/m/*",
        "*://translate.google.com.ua/m/*",
        "*://translate.google.com.vn/m/*",
        "*://translate.google.co.in/m/*",
        "*://translate.google.co.jp/m/*",
        "*://translate.google.co.kr/m/*",
        "*://translate.google.co.uk/m/*",
        "*://translate.google.cn/m/*",
        "*://translate.google.de/m/*",
        "*://translate.google.fr/m/*",
        "*://translate.google.it/m/*",
        "*://translate.google.pl/m/*",
        "*://translate.google.ru/m/*"
      ],
      "js": ["data/panel/inject.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },
  "homepage_url": "http://add0n.com/dictionary.html",
  "icons": {
    "16": "data/icons/16.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  },
  "applications": {
    "gecko": {
      "id": "jid0-fbHwsGfb6kJyq2hj65KnbGte3yT@jetpack",
      "strict_min_version": "52.0"
    }
  }
}
